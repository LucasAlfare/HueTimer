<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bomesmo.huetimer.main.fazendo_de_novo.MainActivity2">

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/aldrich"
        android:shadowColor="#687dbc"
        android:shadowDx="-5"
        android:shadowRadius="5"
        android:tag="display"
        android:text="pronto!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_dark"
        android:textSize="55sp" />

    <TextView
        android:id="@+id/scramble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxWidth="280dp"
        android:text="scramble..."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/setInsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:button="@drawable/custom_checkbox_button"
        android:checked="true"
        android:fontFamily="sans-serif"
        android:text="usar inspeção"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/currPhaseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display"
        android:layout_centerHorizontal="true"
        android:text="current phase: 0" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currPhaseView"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="OK" />

        <RadioButton
            android:id="@+id/radioPlus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+2" />

        <RadioButton
            android:id="@+id/radioDnf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DNF" />
    </RadioGroup>

</RelativeLayout>