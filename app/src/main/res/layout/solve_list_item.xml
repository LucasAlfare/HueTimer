<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- -->
    <CheckBox
        android:id="@+id/solveBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/deleteSolve"
        android:text="Solve" />

    <ImageView
        android:id="@+id/shareSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/solveBox"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/solveBox"
        app:srcCompat="@drawable/ic_menu_share" />

    <ImageView
        android:id="@+id/deleteSolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/solveBox"
        android:layout_alignTop="@+id/solveBox"
        android:layout_toStartOf="@+id/shareSolve"
        app:srcCompat="@android:drawable/ic_delete" />

</RelativeLayout>