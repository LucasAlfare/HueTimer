<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- android:background="#ccd1eb" -->

    <RadioGroup
        android:id="@+id/childRadioGroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioOkChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="OK" />

        <RadioButton
            android:id="@+id/radioPlus2Child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+2" />

        <RadioButton
            android:id="@+id/radioDnfChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DNF" />
    </RadioGroup>

    <EditText
        android:id="@+id/newTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="novo tempo"
        android:inputType="numberDecimal"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/newScramble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="novo scramble"
        android:textColor="@android:color/background_dark" />

</LinearLayout>